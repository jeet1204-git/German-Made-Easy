rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection:
    // - Users can read their own document
    // - Users can CREATE their own document (signup), but NOT set isPaidStudent
    // - Users can UPDATE their own document for normal fields (streak, score, etc.)
    //   but CANNOT modify isPaidStudent or enrolledCourses (payment-gated fields)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;

      // On creation: block isPaidStudent field
      allow create: if request.auth != null
        && request.auth.uid == userId
        && !request.resource.data.keys().hasAny(['isPaidStudent']);

      // On update: block changing isPaidStudent; allow enrolledCourses (set by payment handler)
      allow update: if request.auth != null
        && request.auth.uid == userId
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isPaidStudent']);
    }

    // Leaderboard collection: any authenticated user can read, but can only write their own entry
    match /leaderboard/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Leaderboard weekly collection: authenticated users can read all documents,
    // and write only their own entry under the /scores/ subcollection
    match /leaderboard_weekly/{weekId} {
      allow read: if request.auth != null;

      // This rule covers the old (unused) direct subcollection path for backwards compat
      match /{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // This is the ACTIVE path: leaderboard_weekly/{weekId}/scores/{userId}
      match /scores/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Payments collection: authenticated users can read their own payments and create/update their own
    match /payments/{paymentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }

    // Contacts collection: anyone can submit a contact form, only admin reads
    match /contacts/{contactId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Mail collection: authenticated users can create only (no read, update, or delete)
    match /mail/{mailId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }

    // AI sessions: authenticated users can create their own session records
    match /aiSessions/{sessionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // Match queue: authenticated users can read all entries, manage their own,
    // and update others' entries when creating a match (setting matchId and status)
    match /match_queue/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (
        request.auth.uid == userId ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['matchId', 'status']))
      );
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Matches collection: only authenticated users involved in the match can read/write
    match /matches/{matchId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid in resource.data.users;

      // ICE candidates subcollections: authenticated match participants can read/write
      match /{subcollection}/{candidateId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
