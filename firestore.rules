rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection: authenticated users can read/write only their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Leaderboard collection: any authenticated user can read, but can only write their own entry
    match /leaderboard/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Leaderboard weekly collection: authenticated users can read all documents, can write only their own entry
    match /leaderboard_weekly/{weekId} {
      allow read: if request.auth != null;
      match /{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Payments collection: authenticated users can read their own payments and create/update their own
    match /payments/{paymentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }

    // Contacts collection: anyone can submit a contact form, only admin reads
    match /contacts/{contactId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Mail collection: authenticated users can create only (no read, update, or delete)
    match /mail/{mailId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }

    // Match queue: authenticated users can read all entries, manage their own,
    // and update others' entries when creating a match (setting matchId and status)
    match /match_queue/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (
        request.auth.uid == userId ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['matchId', 'status']))
      );
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Matches collection: only authenticated users involved in the match can read/write
    match /matches/{matchId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid in resource.data.users;

      // ICE candidates subcollections: authenticated match participants can read/write
      match /{subcollection}/{candidateId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
